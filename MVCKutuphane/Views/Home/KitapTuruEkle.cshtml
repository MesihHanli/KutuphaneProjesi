@model MVCKutuphane.Models.BookTypeModel

@{
    ViewBag.Title = "KitapTuruEkle";
}

<h2>Kitap Turu Ekle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Tur, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tur, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (@TempData["BookTypeKayit"] != "Hata!")
{
    <div class="alert-success">
        @TempData["BookTypeKayit"]
    </div>
}
else
{
    <div class="alert-danger">
        @TempData["BookTypeKayit"]
    </div>
}


<div>
    @Html.ActionLink("Listeye Geri Dön", "KitapTuruDuzenle", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
